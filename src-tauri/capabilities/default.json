{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": [
        "main"
    ],
    "permissions": [
        "core:default",
        "core:window:allow-start-dragging",
        "core:window:allow-close",
        "opener:default",
        "dialog:default",
        "fs:default",
        "fs:read-all",
        "fs:write-all",
        {
            "identifier": "fs:scope",
            "allow": [
                {
                    "path": "$APPLOCALDATA/config.json"
                }
            ]
        }
    ]
}