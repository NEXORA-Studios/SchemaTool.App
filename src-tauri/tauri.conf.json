{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "SchemaTool",
    "version": "2.1.0",
    "identifier": "tech.nexora-studios.schematool",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "SchemaTool",
                "width": 1024,
                "minWidth": 1024,
                "height": 768,
                "minHeight": 768,
                "decorations": false,
                "center": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
        "copyright": "Copyright Â© 2024~present NEXORA Studios, All Rights Reserved.",
        "publisher": "NEXORA Studios"
    }
}
